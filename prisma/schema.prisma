datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String    @id    @default(uuid())
  name       String
  email      String    @unique
  password   String
  is_admin   Boolean   @default(false)

  @@map("users")
}